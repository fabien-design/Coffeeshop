<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{asset('resources/css/base.css')}}" />
        <link rel="stylesheet" href="{{asset('build/app.css')}}" />
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css" />
        {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" /> #}
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block headerBody %}
        <header>
            <nav class="navbar">
                <div class="logo">
                    <a href="#">Coffeera</a>
                </div>
                <div class="icon">
                <span class="toggle">☰</span>
                </div>
                <ul class="list-item">
                    {% block header %}
                    <li class="navbarLink"><a href="{{ path('index') }}#home">Home</a></li>
                    <li class="navbarLink"><a href="{{ path('index') }}#">Popular product</a></li>
                    <li class="navbarLink"><a href="{{ path('index') }}#">About us</a></li>
                    <li class="navbarLink"><a href="{{ path('index') }}#">Testimonial</a></li>
                    <li class="navbarLink"><a href="{{ path('index') }}#">Contact us</a></li>
                    {% endblock %}
                </ul>
            </nav>
        </header>
        {% endblock %}
        {% block body %}{% endblock %}

        {% block footer %}
            
        
        <footer>
            <div class="infosContact">
                <div class="formContainer">
                    <h1 class="formTitle">Contactez-nous</h1>
                    {# <form action="#">
                        <label for="fname">FirstName</label>
                        <input class="inputText" type="text" id="fname" name="firstname"  placeholder="your firstname">
                        <label for="lname">LastName</label>
                        <input class="inputText" type="text" id="lname" name="lastname" placeholder="your lastname">

                        <label for="emailAddress">Email</label>
                        <input class="inputText" id="emailAddress" type="email" name="email" placeholder="Email">

                        <label for="sujet">Phone</label>
                        <input class="inputText"type="tel" id="phone" name="phone" placeholder="phone ">

                        <label for="subject">Message</label>
                        <textarea class="inputTextarea" id="subject" name="subject" placeholder="Message" style="height:200px"></textarea>

                        <input type="submit" value="Submit">
                    </form> #}
                    {% for message in app.flashes('success') %}
                        {{message}}
                    {% endfor %}
                    {% block contactForm %}
                    {{form(form)}}
                    {% endblock %}
                </div>
            </div>
            <div class="copyright">
                <p>© 2023 Copyright <span>Coffeera</span>. All Rights Reserved.</p>
            </div>
        </footer>
        {% endblock %}
        {% block bottomJS %}
        {% endblock %}
        <script type="text/javascript" src="{{asset('resources/js/base.js')}}"></script>

    </body>
</html>
